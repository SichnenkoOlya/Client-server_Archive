package by.bsuir.server.main;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;
import java.net.SocketException;

import by.bsuir.server.SocketStream;



public class Main {
public static void main(String[] args) {
	ServerSocket socketListener=null;
    SocketStream clientSocket = null;
    ClientThread thread=null;
	try {
                                      //Создаем слушатель
	    socketListener = new ServerSocket(3342);

		while (true) {
			Socket client = null;
		    clientSocket = new SocketStream(socketListener.accept());
			//while (client == null) {
				//client = socketListener.accept();
			//}
			new ClientThread(clientSocket);
			
	} 
	}catch (SocketException e) {
		System.err.println("Socket exception");
		e.printStackTrace();
	} catch (IOException e) {
        System.err.println("I/O exception");  
		e.printStackTrace();
	}
	finally {
		if (socketListener!=null)
			try {
				socketListener.close();
			} catch (IOException e) {
				e.printStackTrace();
			}
	}
}
}
